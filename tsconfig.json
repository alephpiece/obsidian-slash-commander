{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2017",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "bundler",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "paths": {
            "@/*": ["src/*"],
            "@data/*": ["src/data/*"],
            "@ui/*": ["src/ui/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"],
            "@assets/*": ["src/assets/*"]
        }
    },
    "include": ["src"]
}
