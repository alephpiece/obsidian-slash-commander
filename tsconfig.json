{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2017",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "bundler",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2021"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"paths": {
			"@/*": ["src/*"],
			"@data/*": ["src/data/*"],
			"@ui/*": ["src/ui/*"],
			"@services/*": ["src/services/*"],
			"@utils/*": ["src/utils/*"],
			"@assets/*": ["src/assets/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}
